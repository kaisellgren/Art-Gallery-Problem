<Window x:Class="GeometryTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="500" Width="800">

    <Grid x:Name="LayoutRoot" Background="{StaticResource ListBackgroundBrush}" Loaded="LayoutRoot_Loaded">
        <!-- Invert the grid's Y coordinates to represent positioning of coordinates. -->
        <Grid.LayoutTransform>
            <ScaleTransform ScaleY="-1"/>
        </Grid.LayoutTransform>
        <Path Fill="Gold" Stroke="Black" StrokeThickness="1">
            <Path.Data>
                <EllipseGeometry Center="322,0" RadiusX="5" RadiusY="5" />
            </Path.Data>
        </Path>
        <Polygon Points="100.0,41.5 201,0.5 322,155 157.25,203, 0,0" Stretch="Fill"
    Stroke="Black" StrokeThickness="2" Fill="#7EBB9A" />
    </Grid>
</Window>
