<Window x:Class="GeometryTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Art Gallery Problem Solver" Height="500" Width="800"
         Icon="Resources/galleryIcon.png" Style="{StaticResource WindowGlassStyle}"
        ResizeMode="NoResize">
    <DockPanel Margin="5,5,5,5" >
    <Grid x:Name="LayoutRoot" Background="{StaticResource ListBackgroundBrush}" Loaded="LayoutRoot_Loaded">
        <!-- Invert the grid's Y coordinates to represent positioning of coordinates. -->
        <Grid.LayoutTransform>
            <ScaleTransform ScaleY="-1"/>
        </Grid.LayoutTransform>
        <Polygon Points="100.0,41.5 201,0.5 322,155 157.25,203, 0,0" Stretch="None"
    Stroke="Black" StrokeThickness="2" Fill="#7EBB9A" />
        <Path Fill="Gold" Stroke="Black" StrokeThickness="1">
            <Path.Data>
                <EllipseGeometry Center="100,41.5" RadiusX="5" RadiusY="5"/>
            </Path.Data>
        </Path>
    </Grid>
    </DockPanel>
</Window>
